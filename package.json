{
  "name": "spot",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiskattema/spot.git"
  },
  "version": "0.0.1",
  "author": {
    "name": "Jisk Attema",
    "email": "j.attema@esciencecenter.nl"
  },
  "browser": {
    "mdl": "./node_modules/material-design-lite/dist/material.js"
  },
  "semistandard": {
    "ignore": [
      "/public/app.js",
      "/doc"
    ]
  },
  "dependencies": {
    "budo": "^8.2.1",
    "pg-native": "^1.10.0"
  },
  "devDependencies": {
    "ampersand-app": "^1.0.4",
    "ampersand-collection": "^1.6.1",
    "ampersand-model": "^6.0.3",
    "ampersand-router": "^3.0.2",
    "ampersand-view": "^9.0.2",
    "ampersand-view-switcher": "^2.1.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "chart.js": "^2.0.0",
    "chroma-js": "^1.1.1",
    "crossfilter": "^1.3.12",
    "csv": "^0.4.6",
    "domready": "^1.0.5",
    "eslint": "^2.11.1",
    "eslint-config-defaults": "^9.0.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.1",
    "eslint-plugin-react": "^5.1.1",
    "eslint-plugin-standard": "^1.3.2",
    "favicon-setter": "^0.1.1",
    "jade": "^1.11.0",
    "jasmine": "^2.4.1",
    "jsdoc": "^3.4.0",
    "local-links": "^1.2.0",
    "material-design-icons": "^2.0.0",
    "material-design-lite": "^1.1.3",
    "mathjs": "^3.1.2",
    "moment": "^2.11.2",
    "moment-timezone": "^0.5.0",
    "pg": "^4.5.3",
    "semistandard": "^8.0.0",
    "squel": "^5.0.4",
    "stylus": "^0.49.3",
    "templatizer": "^2.0.0",
    "uglify-js": "^2.6.2"
  },
  "readmeFilename": "README.md",
  "scripts": {
    "templates": "templatizer -d templates -o client/templates.js",
    "css": "stylus -o client --include-css stylesheets/app.styl",
    "css-watch": "stylus -w -o public --include-css stylesheets/app.styl",
    "uglify": "browserify --index public/index.html client/app.js  | uglifyjs --no-source-map --screw-ie8 > public/app.js",
    "dist": "npm run templates && npm run css && npm run uglify",
    "server": "node spot-server.js",
    "gh-pages": "npm run dist && git subtree push --prefix public origin gh-pages",
    "check": "semistandard && jasmine",
    "doc": "jsdoc -c .jsdoc.json -d doc --package package.json --readme README.md client/models client/views client/",
    "start": "npm run css-watch & budo -v -P --live --dir public --css app.css client/app.js -- -v"
  }
}
