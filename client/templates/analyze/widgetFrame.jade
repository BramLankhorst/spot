div.widgetFrame.mdl-color--white.mdl-shadow--2dp

  div(data-hook="config-view").configView
    div.widgetDragBar
      button(data-hook="edit").mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect
        i.material-icons mode_edit
      span.dragBarText Drag here to move the plot and use bottom right corner to resize
      button(data-hook="close").mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect
        i.material-icons close
    div(data-hook="slots").slots

  div(data-hook="widget").widgetView
 
  div(data-hook="plot-menu").plotMenu
    button(data-hook="zoom-in").mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect
      i.material-icons explore
    button(data-hook="zoom-out").mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect
      i.material-icons backspace
