ul(style="flex-shrink: 0; flex-grow: 0; flex-basis: 20em")
  li.mdl-list__item.mdl-list__item--three-line
    span.mdl-list__item-primary-content
      i.material-icons.mdl-list__item-avatar person
      span
        a(href="" data-hook="name")
      span(data-hook="description").mdl-list__item-text-body

    span.mdl-list__item-secondary-content
      span.mdl-list__item-secondary-action
        label(data-hook="cblabel" for="").mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect
          input(data-hook="cb" type="checkbox" id="").mdl-checkbox__input
