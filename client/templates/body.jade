body
  div.demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer
    div.demo-drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-color-text--blue-grey-50
      header.demo-drawer-header
        a(href="/home")
          div.demo-avatar

      nav.demo-navigation.mdl-navigation.mdl-color--blue-grey-800
        a(href="/datasets").mdl-navigation__link
          i(role="presentation").mdl-color-text--blue-grey-400.material-icons info_outline
          | 1. Datasets
        a(href="/analyze").mdl-navigation__link
          i(role="presentation").mdl-color-text--blue-grey-400.material-icons insert_chart
          | 2. Analyze
        a(href="/export").mdl-navigation__link
          i(role="presentation").mdl-color-text--blue-grey-400.material-icons cloud_download
          | 3. Export
        a(href="/share").mdl-navigation__link
          i(role="presentation").mdl-color-text--blue-grey-400.material-icons share
          | 4. Share
          
        div.mdl-layout-spacer
        div(id="helpButton").mdl-navigation__link
          i(role="presentation").mdl-color-text--blue-grey-400.material-icons help_outline
          | Help

    main(data-hook="page-container").mdl-layout__content.mdl-color--grey-100

    dialog(id="helpDialog").mdl-dialog
      div(id="helpZone").carousel
        div.carousel-cell
          img(id="img1" src="images/help/dataset_1.svg").carousel-cell-image

      button(id="dialogCloseButton").mdl-button.mdl-snackbar__action.mdl-button--raised.mdl-button.mdl-button--colored Close


    div(id="snack-bar" aria-live="assertive" aria-atomic="true" aria-relevant="text").mdl-js-snackbar.mdl-snackbar
      div.mdl-snackbar__text
      button(type="button").mdl-snackbar__action
