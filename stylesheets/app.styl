@import '../node_modules/material-design-lite/dist/material.css'
@import 'material_icons.css'

@import '_variables'
@import '_mixins'

.unselectable
  -moz-user-select: none
  -khtml-user-select: none
  -webkit-user-select: none
  -ms-user-select: none
  user-select: none


// your styles here:
body
  background: white

// datatable
div.table
  overflow-x: scroll

.fullwidth
  width: 100%

.mdl-text-field
  font-size: large


// image card:
// https://www.getmdl.io/components/index.html#cards-section

.lightBG
  background-color: rgb(239, 239, 239)

.fileBtn
  position: absolute
  left: 0
  top: 0
  clip: rect(0px 0px 0px 0px)

.card-wide > .mdl-card__title
  color: #fff
  height: 176px

.card-wide > .mdl-card__menu
  color: #fff

.activeFacet
  color: rgb(63,81,181)
  border: 2px solid
  margin-top: 3px
  margin-bottom: 3px

.mdl-card__media
  background-color: white

.mdl-card__actions
  background-color: white

.activeFacet
  .mdl-card__actions
    position: absolute
    bottom: 0

.inactiveFacet
  .mdl-card__actions
    position: absolute
    bottom: 0

.mdl-card__menu
  background-color: white

.analyzeMain
  overflow-y: scroll

.widgetOuterFrame
  display: flex
  position: absolute
  align-items: stretch

.widgetFrame
  flex: 1
  display: flex
  flex-direction: column
  jusify-content: space-between
  align-items: stretch
  
.plotMenu
  flex-grow: 0
  align-self: flex-start
  z-index: 30
  position: absolute
  top: 0
  left: 0

.dropZoneOverlay
  background: rgba(255,255,255,0.75)
  border: 2px dotted rgb(63,81,181)
  z-index: 20
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

.partitionDrop
  width: 100%
  height: 40%
  border-top: 2px dotted

.mdl-chip
  margin-left: 2px
  margin-right: 2px

.aggregateDrop
  width: 100%
  height: 40%
  border-top: 2px dotted

.widgetArea
  display: flex
  align-items: stretch
  flex-grow: 1

.widgetActions
  flex-grow: 0

.partitionList
  width: 45%
  position: absolute
  bottom: 0
  left: 0

.aggregateList
  width: 45%
  position: absolute
  bottom: 0
  right: 0

.homeCard
  display: flex
  align-items: center
  justify-content: center

.jsonupload
  background: lightblue url('images/JSON.svg') no-repeat center
  background-size: contain

.serverupload
  background: lightblue url('images/PostgreSQL_logo.3colors.svg') no-repeat center
  background-size: contain

.csvupload
  background: lightblue url('images/CSV.svg') no-repeat center
  background-size: contain

.sessionupload
  background: lightblue url('images/upload.svg') no-repeat center
  background-size: contain

.sessiondownload
  background: lightblue url('images/download.svg') no-repeat center
  background-size: contain

.readthedoc
  background: lightblue url('images/readthedoc.svg') no-repeat center
  background-size: contain

.searchBar
  padding: 1em
  border-radius: 1em

.widgetInner
  width: 100%

.chartBar
  border-bottom: 5px solid
  display: flex
  flex-direction: row
  justify-content: center

.chartText
  text-align: center
  align-self: center
  width: 10em

.chartIcon
  flex: 1
  width: 3em
  height: 3em
  background-size: contain
  background-repeat: no-repeat
  background-position: center

.horizontalBarChartIcon
  @extends .chartIcon
  background-image: url('images/horizontal-bar-chart.svg')

.barChartIcon
  @extends .chartIcon
  background-image: url('images/bar-chart.svg')

.lineChartIcon
  @extends .chartIcon
  background-image: url('images/line-chart.svg')

.pieChartIcon
  @extends .chartIcon
  background-image: url('images/pie-chart.svg')

.polarChartIcon
  @extends .chartIcon
  background-image: url('images/polar-chart.svg')

.bubbleChartIcon
  @extends .chartIcon
  background-image: url('images/bubble-chart.svg')

.radarChartIcon
  @extends .chartIcon
  background-image: url('images/radar-chart.svg')

.plotly3dChartIcon
  @extends .chartIcon
  background-image: url('images/plotly-3d-chart.svg')

.networkChartIcon
  @extends .chartIcon
  background-image: url('images/network-chart.svg')

.facetIcon
  flex: 1
  width: 10em
  height: 10em
  background-size: contain
  background-repeat: no-repeat
  background-position: right center


.facetIcon--small
  width: 64px
  height: 64px
  margin-right: 32px
  background-repeat: no-repeat
  background-position: right center

.facetInfoIcon
  background-image: url('images/facet-info.svg')

.facetTypeIcon
  background-image: url('images/facet-type.svg')

.facetBaseValueIcon
  background-image: url('images/facet-basevalue.svg')

.facetTimeIcon
  background-color: white
  background-image: url('images/facet-time.svg')

.facetContinuousIcon
  background-color: white
  background-image: url('images/facet-continuous.svg')

.facetCategorialIcon
  background-color: white
  background-image: url('images/facet-categorial.svg')

.facetTransformTimeIcon
  background-image: url('images/facet-transform-time.svg')

.facetReductionIcon
  background-image: url('images/facet-reduction.svg')

.facetReductionPercentageIcon
  background-image: url('images/facet-reduction-percentage.svg')

.facetBarItems
  width: 95%
  display: flex
  flex-direction: row

.facetBarText
  width: 10em

.widgetFrame
  z-index: 10

.widgetMenu
  display: flex
  align-items: center

.widgetText
  flex: 1
  text-align: center

.sigmajs
  top: 0
  bottom: 0
  left: 0
  right: 0
  position: absolute
