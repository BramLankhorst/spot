// app/layout.styl

@import '../_variables'
@import '../_mixins'
@import 'footer'


// your styles here:
body
  background: white

// color for brush
rect.extent
  fill: rgba(125,125,125,0.4)

// histogram bars:
rect.bar.deselected
  fill: #c5dded

rect.bar.selected
  fill: #1f77b4

// datatable
div.table
  overflow-x: scroll


// pie slices:
g.pie-slice.deselected
  opacity: 0.2

.widgetframe
  padding: 20px
  min-height: 350px

.fullwidth
  width: 100%

.mdl-text-field
  font-size: large

