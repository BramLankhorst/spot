     div.mdl-grid

      div.mdl-cell.mdl-cell--3-col
        h1 Reduction

      div.mdl-cell.mdl-cell--9-col
     
        h2 Reduction 
       
        div.mdl-grid

          div.mdl-cell.mdl-cell--4-col
            label(for="reduction-count").mdl-radio.mdl-js-radio.mdl-js-ripple-effect
              input(
                id="reduction-count"
