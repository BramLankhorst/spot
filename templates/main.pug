body
  div.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-drawer
    div(data-hook="main-drawer").mdl-layout__drawer.mdl-color--grey-800.is-expanded
      span.mdl-layout-title

      header.mdl-layout__header.mdl-color--grey-900
        div.mdl-layout__header-row
          button(data-hook="menu-button" id="menu-button").mdl-button.mdl-js-button.mdl-button--icon
            i(role="presentation"  id="menuButton").fa.fa-bars.menuIcon

      nav.mdl-navigation.mdl-color--grey-900

        a(href="/home").mdl-navigation__link
          i(role="presentation" id="homeButton").fa.fa-home.menuIcon

        a(href="/datasets").mdl-navigation__link
          i(role="presentation" id="datasetButton").fa.fa-database.menuIcon
            span.menuText 1. Datasets

        a(href="/analyze").mdl-navigation__link
          i(role="presentation" id="analyzeButton").fa.fa-pie-chart.menuIcon
            span.menuText 2. Analyze

        a(href="/share").mdl-navigation__link
          i(role="presentation" id="shareButton").fa.fa-share-alt-square.menuIcon
            span.menuText 3. Share

        div.mdl-layout-spacer
        a(href="" data-hook="tour-button" id="tour-button").mdl-navigation__link
          i(role="presentation" id="tourButton").fa.fa-question-circle.menuIcon
            span.menuText Help

    main(data-hook="page-container").mdl-layout__content

    div(id="progress-bar" style="width: 100%; height: 5%; display: none").mdl-progress.mdl-js-progress

    div(id="snack-bar" aria-live="assertive" aria-atomic="true" aria-relevant="text").mdl-js-snackbar.mdl-snackbar
      div.mdl-snackbar__text
      button(type="button").mdl-snackbar__action
