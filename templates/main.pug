body
  div(data-hook="test").mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-drawer
    div(data-hook="main-drawer").mdl-layout__drawer.is-expanded
      span.mdl-layout-title

      nav(data-hook="nav-menu").mdl-navigation

        a(href="").mdl-navigation__link
          i(role="presentation" data-hook="menu-button" id="menu-button").material-icons.menuIcon menu

        a(href="/home"  data-position="bottom" data-step="2" data-intro="This button open the homepage. This is where you are at now.").mdl-navigation__link
          i(role="presentation" id="homeButton").material-icons.menuIcon home
            span.menuText Home

        a(href="/datasets"  data-position="bottom" data-step="3" data-intro="In Datasets page, you can upload your dataset or use existing datasets. You can also configure your datasets.").mdl-navigation__link
          i(role="presentation" id="datasetButton").material-icons.menuIcon storage
            span.menuText Datasets

        a(href="/analyze" data-position="bottom" data-step="4" data-intro="In Analyze page, you can create your dashboard in a few clicks by creating new charts.").mdl-navigation__link
          i(role="presentation" id="analyzeButton").material-icons.menuIcon insert_chart
            span.menuText Analyze

        a(href="/share" data-position="bottom" data-step="5" data-intro="In share page, you can share your current session or load the session which is shared with you.").mdl-navigation__link
          i(role="presentation" id="shareButton").material-icons.menuIcon share
            span.menuText Share

        div.mdl-layout-spacer

        a(href="#").mdl-navigation__link
          i(role="presentation" data-hook="help-button" id="help-button").material-icons.menuIcon help
            span.menuText Help


      div(data-hook="menu-spacer").mdl-layout-spacer

    main(data-hook="page-container").mdl-layout__content

    div(id="progress-bar" style="width: 100%; height: 5%; display: none").mdl-progress.mdl-js-progress

    div(id="snack-bar" aria-live="assertive" aria-atomic="true" aria-relevant="text").mdl-js-snackbar.mdl-snackbar
      div.mdl-snackbar__text
      button(type="button").mdl-snackbar__action
